<UserControl x:Class="AvengersUtd.Explore.Environment.Controls.CustomSplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="240" Width="400">
    <Border BorderBrush="Black"
            BorderThickness="1.0">
        <DockPanel LastChildFill="True" >
            <StatusBar BorderThickness="0 1 0 0" BorderBrush="DarkGray" DockPanel.Dock="Bottom" Width="Auto" Height="23" Name="statusBar">
                <TextBlock Margin="1" Text="{Binding Message}"/>
            </StatusBar>

            <StackPanel Orientation="Vertical">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF2A4058" Offset="0" />
                    <GradientStop Color="#FFD1D4FF" Offset="1" />
                </LinearGradientBrush>
            </StackPanel.Background>
                <TextBlock Text="Design Environment" Margin="16 8 16 8" FontFamily="Calibri" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="v 0.1" Margin="340 140 8 0" 
                           FontFamily="Calibri" FontStyle="Italic" FontSize="24" FontWeight="Bold" 
                           Foreground="White"/>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
