        <TextBox Height="23" HorizontalAlignment="Left" Margin="215,70,0,0" Name="tbLongitudine" VerticalAlignment="Top" Width="101" />
        <Label Content="History" Height="28" HorizontalAlignment="Left" Margin="12,136,0,0" Name="label4" VerticalAlignment="Top" />
        <TextBox AcceptsReturn="True" Height="50" HorizontalAlignment="Left" Margin="12,162,0,0" Name="tbStoria" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" />
